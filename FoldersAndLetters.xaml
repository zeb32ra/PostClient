<Window x:Class="Post.FoldersAndLetters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Post"
        mc:Ignorable="d"
        Title="FoldersAndLetters" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Папки:" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
        <ListBox x:Name="FolderCont" Grid.Row="1" Grid.Column="0" SelectionChanged="FolderCont_SelectionChanged"/>
        <Button Content="Написать" Grid.Row="2" VerticalAlignment="Center" Grid.Column="0"/>
        <ListBox Grid.Column="1" Grid.Row="0" Grid.RowSpan="3"/>
    </Grid>
</Window>
